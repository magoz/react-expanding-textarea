{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "*": ["./source/types/*"]
    },
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["./source/types/*"]
}
